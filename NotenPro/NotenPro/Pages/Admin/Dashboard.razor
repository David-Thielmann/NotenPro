@page "/admin/dashboard"
<PageTitle>Dashboard - Schuladministrator</PageTitle>

<MudText Typo="Typo.h4" Class="mb-6">Schuladministrator Dashboard</MudText>

<MudGrid Class="mb-6">
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2" Class="hover-card">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Lehrer</MudText>
                        <MudText Typo="Typo.h4">45</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2" Class="hover-card">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Klassen</MudText>
                        <MudText Typo="Typo.h4">18</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Class" Color="Color.Success" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2" Class="hover-card">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Schüler</MudText>
                        <MudText Typo="Typo.h4">520</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.School" Color="Color.Info" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2" Class="hover-card">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Fächer</MudText>
                        <MudText Typo="Typo.h4">25</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Color="Color.Warning" Size="Size.Large" />
                </div>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudCard Elevation="2">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Schnellzugriff</MudText>
    </MudCardHeader>
    <MudCardContent>
        <div class="d-flex gap-3 flex-wrap">
            <MudButton StartIcon="@Icons.Material.Filled.PersonAdd" Variant="Variant.Filled" Color="Color.Primary" Href="/admin/teachers">
                Lehrer hinzufügen
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Primary" Href="/admin/classes">
                Klasse erstellen
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Primary" Href="/admin/subjects">
                Fach anlegen
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Backup" Variant="Variant.Outlined" Color="Color.Success" Href="/admin/backups">
                Backup erstellen
            </MudButton>
        </div>
    </MudCardContent>
</MudCard>
